{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "types/*"]
    },
    "declaration": true,
    "outDir": "dist"
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "src/types/*"]
}
